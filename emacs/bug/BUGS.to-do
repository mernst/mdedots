(defun hash-table-keys (h)
  (let ((keys nil))
    (maphash (function (lambda (key value)) (push key keys)) h)
    (nreverse keys)))

;; Returns non-nil if, for all completions, their prefix has the same case
;; (they are the same up to capitalization).  The return value is the
;; common prefix, which is the same (up to case) as the result of
;; try-completion.  Returns nil if try-completion returns nil.
(defun all-completions-same-case (string alist &optional predicate)
  (let ((completion (try-completion string alist predicate)))
    (if completion
	(let ((completion-length (length completion))
	      (candidates (if (hash-table-p alist)
			      (hash-table-keys alist)
			    (mapcar (function (lambda (elt) (if (stringp elt)
								elt
							      (car elt))))
				    alist)))
	      (result nil))
	  (while candidates
	    (let* ((this-candidate (car candidates))
		   (this-prefix (substring this-candidate 0 completion-length)))
	      (if (if predicate
		      (funcall predicate this-candidate)
		    (eq t (compare-strings completion nil nil
					   this-prefix nil nil
					   case-fold-search)))
		  ;; This candidate matches the criterion
		  (if (not result)
		      ;; First match seen; initialize result
		      (setq result this-prefix)
		    (if (not (string= result this-prefix))
			;; does not match; function will return nil
			(setq candidates nil
			      result nil)))))
	    (setq candidates (cdr candidates)))
	  result))))

(assert (string= "getMillis"
 (let ((completion-ignore-case t))
   (all-completions-same-case "getmilli" '("getMillis"
	 				  "getMillisToDecideToPopup"
		 			  "getMillisToPopup"
			 		  "getMillisecond")))))
(assert (equal nil
 (let ((completion-ignore-case t))
   (all-completions-same-case "getmilli" '("getMillis"
					  "getMillisToDecideToPopup"
					  "getmillistopopup"
